<Buildings>
    <!-- Empty building for filling currently buildable cells. Mandatory. -->
    <Building>
        <Name>Empty</Name>
        <BuildTime>0</BuildTime>
        <Textures>
            <Texture>empty</Texture>
        </Textures>
    </Building>
    <!-- Test building. -->
    <Building>
        <Name>Test</Name>
        <BuildTime>5</BuildTime>
        <Cost>
            <Item>
                <Name>Scrap Metal</Name>
                <Amount>100</Amount>
            </Item>
        </Cost>
        <FixedProduction>
            <Item>
                <Name>Scrap Metal</Name>
                <Amount>2</Amount>
                <Cost>
                    <Item>
                        <Name>Scrap Metal</Name>
                        <Amount>1</Amount>
                    </Item>
                </Cost>
            </Item>
        </FixedProduction>
        <ContinuousProduction>
            <Item>
                <Name>Scrap Metal</Name>
                <Amount>10</Amount>
                <Cost>
                    <Item>
                        <Name>Scrap Metal</Name>
                        <Amount>5</Amount>
                    </Item>
                </Cost>
            </Item>
        </ContinuousProduction>
        <OneTimeProduction>
            <Item>
                <Name>Scrap Metal</Name>
                <Amount>1000</Amount>
                <Cost>
                    <Item>
                        <Name>Scrap Metal</Name>
                        <Amount>500</Amount>
                    </Item>
                </Cost>
            </Item>
        </OneTimeProduction>
        <Storage>
            <Item>
                <Name>Scrap Metal</Name>
                <Amount>10000</Amount>
            </Item>
        </Storage>
        <Textures>
            <Texture>build_default</Texture>
        </Textures>
    </Building>
    <!-- Entrance to the base. Mandatory. -->
    <Building>
        <Name>Entrance</Name>
        <BuildTime>0</BuildTime>
        <Textures>
            <Texture>b_def_1</Texture>
            <Texture>b_def_2</Texture>
            <Texture>b_def_3</Texture>
            <Texture>b_def_4</Texture>
        </Textures>
    </Building>
</Buildings>